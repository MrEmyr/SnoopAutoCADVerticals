<?xml version="1.0" encoding="utf-8"?>
<ApplicationPackage 
    SchemaVersion="1.0" 
    ProductType="Application" 
    Name="UnifiedSnoop" 
    Description="Unified object inspector for AutoCAD and all AutoCAD-based verticals (Civil 3D, Plant 3D, Map 3D, MEP, etc.)"
    Author="AutoCAD Development"
    ProductCode="{B5E8F3A7-9C4D-4E2B-A8F1-3D5E6F7C8D9A}"
    Version="2.1.0"
    AppVersion="2.1.0">

  <CompanyDetails 
    Name="AutoCAD Development" 
    Url="https://github.com" 
    Email="support@example.com"/>

  <RuntimeRequirements 
    OS="Win64"/>

  <!-- AutoCAD-based applications 2024 (.NET Framework 4.8) -->
  <Components Description="UnifiedSnoop for AutoCAD 2024 and all verticals">
    <RuntimeRequirements 
      OS="Win64" 
      SeriesMin="R24.0" 
      SeriesMax="R24.1"/>
    <!-- UnifiedSnoop Main Application -->
    <ComponentEntry 
      AppName="UnifiedSnoop2024" 
      ModuleName="./Contents/2024/UnifiedSnoop.dll" 
      AppDescription="UnifiedSnoop for AutoCAD 2024 and all verticals (Civil 3D, Plant 3D, Map 3D, MEP, etc.)" 
      LoadOnCommandInvocation="True"
      LoadOnAutoCADStartup="True">
      <Commands GroupName="UnifiedSnoop">
        <Command Global="SNOOP" Local="SNOOP"/>
      </Commands>
    </ComponentEntry>
    <!-- XRecord Editor (Separate DLL - loads on demand) -->
    <ComponentEntry 
      AppName="XRecordEditor2024" 
      ModuleName="./Contents/2024/XRecordEditor.dll" 
      AppDescription="XRecord Editor for AutoCAD 2024 and all verticals (Advanced Feature)" 
      LoadOnCommandInvocation="True"
      LoadOnAutoCADStartup="False">
      <Commands GroupName="UnifiedSnoop">
        <Command Global="XRECORDEDIT" Local="XRECORDEDIT"/>
      </Commands>
    </ComponentEntry>
  </Components>

  <!-- AutoCAD-based applications 2025+ (.NET 8.0) -->
  <Components Description="UnifiedSnoop for AutoCAD 2025+ and all verticals">
    <RuntimeRequirements 
      OS="Win64" 
      SeriesMin="R25.0"/>
    <!-- UnifiedSnoop Main Application -->
    <ComponentEntry 
      AppName="UnifiedSnoop2025" 
      ModuleName="./Contents/2025/UnifiedSnoop.dll" 
      AppDescription="UnifiedSnoop for AutoCAD 2025+ and all verticals (Civil 3D, Plant 3D, Map 3D, MEP, etc.)" 
      LoadOnCommandInvocation="True"
      LoadOnAutoCADStartup="True">
      <Commands GroupName="UnifiedSnoop">
        <Command Global="SNOOP" Local="SNOOP"/>
      </Commands>
    </ComponentEntry>
    <!-- XRecord Editor (Separate DLL - loads on demand) -->
    <ComponentEntry 
      AppName="XRecordEditor2025" 
      ModuleName="./Contents/2025/XRecordEditor.dll" 
      AppDescription="XRecord Editor for AutoCAD 2025+ and all verticals (Advanced Feature)" 
      LoadOnCommandInvocation="True"
      LoadOnAutoCADStartup="False">
      <Commands GroupName="UnifiedSnoop">
        <Command Global="XRECORDEDIT" Local="XRECORDEDIT"/>
      </Commands>
    </ComponentEntry>
  </Components>

</ApplicationPackage>

